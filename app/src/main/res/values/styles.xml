<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>

        <item name="android:colorControlActivated">@color/colorTextPrimary</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="SearchEditText">
        <item name="android:textSize">@dimen/font_size_header</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">8dp</item>
    </style>


    <style name="TextBody">
        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextBody.White" parent="TextBody">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextHeader">
        <item name="android:textSize">@dimen/font_size_header</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextHeader.White" parent="TextHeader">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextHeader.White.Medium" parent="TextHeader.White">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
